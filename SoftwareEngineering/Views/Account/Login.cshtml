            <input required="true" id="UserName" name="UserName"/>            
        </li>

        <li data-role="fieldcontain">
            <label for="Password">Password:</label>
            <input type="password" required="true" id="Password" name="Password"/>           
        </li>

        <li data-role="fieldcontain" data-inline="true">
        <label for="Password"></label>
        <input type="submit" class="buttons" id="submitLogin" value="Log in"/>
        </li>
    </ul>
    </fieldset>
} 

