
@{
    ViewBag.Title = "Create Accounts";
}

@section Header {
    <h1>@ViewBag.Title</h1>
    <a href="@Url.Action("ManagerHome", "Manager")"  data-icon="home" data-transition="flow">Home</a>
}

@using (Html.BeginForm())
{

    

<ul data-role="listview" data-inset="true">
        <li data-role="list-divider">User Information</li>
 
	<li data-role="fieldcontain">
            <label for="FirstName">First Name:</label>
            <input id="FirstName" required="true" name="FirstName" maxlength="15" />           
        </li>

        <li data-role="fieldcontain">
            <label for="LastName">Last Name:</label>
            <input  id="LastName" required="true" />           
        </li>

        <li data-role="fieldcontain">
            <label for="UserName">User Name:</label>
            <input id="UserName" name="UserName" required="true"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="Password">Password:</label>
            <input id="Password" name="Password" required="true"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="Email">E-Mail:</label>
            <input id="Email" name="Email" maxlength="15" required="true"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="SecuirtyQuest">Security Question:</label>
            <input id="SecuirtyQuest" name="SecuirtyQuest" required="true"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="SecuirtyAns">Security Question Answer:</label>
            <input id="SecuirtyAns" name="SecuirtyAns" required="true"/> 
        </li>

        <li data-role="fieldcontain">
            <input type="button"  data-role="button" id="submitUpdate" value="Save" />
        </li>
    
</ul> 
        
}
