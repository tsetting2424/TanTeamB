@{
    ViewBag.Title = "Update Accounts";
}

@section Header {
    <h1>@ViewBag.Title</h1>
}


@using (Html.BeginForm())
{

    <div data-role="header" data-inset="true" data-theme="e"> 
    @Html.ActionLink("Back", "ManagerHome","Manager", null, new { data_icon = "back" })
	<h1>Update User</h1> 
    </div> 
    
    
    <div data-role="collapsible"  data-content-theme="c">
        <h3>Search and Select a User</h3>
        <ul id='Userlist' data-role='listview' data-filter='true' data-inset='true'>
            <li id='a1'>
                <input type="radio" id="ChosenUser" data-mini="true"/>
         	    <label for="ChosenUser">Cat</label>
           </li>
    </ul>
    </div>
    
    <ul data-role="listview" data-inset="true" data-theme="e">
        <li data-role="list-divider">User Information</li>

        <li data-role="fieldcontain">
            <label for="FirstName">First Name:</label>
            <input id="FirstName" name="FirstName"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="LastName">Last Name:</label>
            <input  id="LastName" />           
        </li>

        <li data-role="fieldcontain">
            <label for="Address">Address:</label>
            <input id="Address" name="Address"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="City">City:</label>
            <input id="City" name="City"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="State">State:</label>
            <input id="State" name="State"/>           
        </li>

        <li data-role="fieldcontain">
            <label for="ZipCode">Zip Code:</label>
            <input id="ZipCode" name="ZipCode"/>           
        </li>

        <li data-role="fieldcontain">
            <input type="checkbox" name="Enabled" id="Enabled" class="custom" />
	        <label for="Enabled">Enabled</label>           
        </li>

        <li data-role="fieldcontain">
            <input type="button" id="submitUpdate" value="Save"/>
        </li>
    </ul>
        
}
